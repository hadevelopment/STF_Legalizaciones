@model IEnumerable<Legalizaciones.Model.Jerarquia.OrigenDestino>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="box">
            <div class="box-body">
                <small>
                    <a href='@Url.Action("Index","Home")'> Inicio </a>
                    > <strong>Origen-Destinos</strong>
                </small>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="box">

            <div class="box-header with-border">
                <span class="fa fa-info-circle"></span>
                <h1 class="box-title">Mis  Origen-Destino </h1>

                <a class="btn btn-primary" asp-area="" style="float: right;" asp-controller="OrigenDestino" asp-action="Crear">
                    <span class="glyphicon glyphicon-plus"></span>Añadir Origen-Destino
                </a>

            </div>


            <div id="divTable" class="box-body">
                <table id="tblZonas" class="table table-bordered table-hover myDataTable">
                    <thead>
                    <tr>
                        <th> Id </th>
                        <th> Nombre </th>
                        <th> Pais </th>
                        <th> Acciones</th>
                    </tr>
                    </thead>
                    
                    <tbody>
                    @if (Model.Count() > 0)
                    {
                        @foreach (var item in Model)

                         {
                             <tr>
                                 <td>
                                     @Html.DisplayFor(modelItem => item.Id)
                                 </td>
                                 <td>

                                     @Html.DisplayFor(modelItem => item.Nombre)
                                 </td>
                                 <td>
                                     @Html.DisplayFor(modelItem => item.Pais.Nombre)
                                 </td>

                                 <td>
                                     <a class="item-btn" asp-controller="OrigenDestino" asp-action="Visualizar" asp-route-id="@item.Id">
                                         <span class="fa fa-eye"></span>
                                     </a>

                                     <a class="item-btn" asp-controller="OrigenDestino" asp-action="Editar" asp-route-id="@item.Id">
                                         <span class="fa fa-pencil"></span>
                                     </a>
                                 </td>
                             </tr>
                         }

                    }
                    else
                    {
                        <tr class="tableEmpty">
                            <td colspan="8">
                                No se encontraron resultados...
                            </td>
                        </tr>
                    }

                    </tbody>

                </table>
               
            </div>
            
            <br />
            <div class="row">
                <div style="float: left;" class="col-md-2">
                    <a class="btn btn-primary fa fa-file-excel-o" asp-area="" style="float:left;" asp-controller="ExportFilesFormat" asp-action="ExportDatosOrigenDestinoExcel">Exportar Excel</a>


                </div>
                <div id="divUpload">
                    <div style="float: left;" class="col-md-4">
                        <input type="file" name="fileExcel" id="fileExcel" multiple>
                    </div>
                    <div style="float: left;" class="col-md-2">
                        <input type="button" name="btnUpload" id="btnUpload" value="Carga Data" class="btn btn-primary glyphicon glyphicon-plus">
                    </div>
                </div>
                
                <div id="divUpdateGrid" style="visibility: hidden;">

                    <div style="float: center;" class="col-md-4">
                        <label>Datos agregados correctamente, por favor actualice la vista de datos.</label>
                        
                    </div>
                    
                    <div style="float: left;" class="col-md-4">

                        <a class="btn btn-warning fa fa-file-excel-o" asp-area="" style="float: left;" asp-controller="OrigenDestino" asp-action="Index">Actualizar Datos</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/js/select2.min.js"></script>
    <link href="~/css/select2.min.css" rel="stylesheet"/>
    <script src="~/js/OrigenDestinoScript.js"></script>
}
