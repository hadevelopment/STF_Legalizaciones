@model Legalizaciones.Model.Jerarquia.Zona
@{
    ViewData["Title"] = "Visualizar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Visualizar Zonas</h2>

<div class="row">
    <div class="col-sm-12">
        <div class="box">
            <div class="box-body">
                <small>
                    <a href='@Url.Action("Index","Home")'> Inicio </a>
                    >
                    <a href='@Url.Action("Index","Solicitud")'> Zonas </a>
                    >
                    <strong>Editar</strong>
                </small>
            </div>
        </div>
    </div>
</div>

<form asp-controller="Zona" asp-action="Eliminar" method="post" name="form1">
    <div class="hidden">
        <input class="hide" type="text" id="txProceso" name="txProceso" value="A" />
        <input class="hide" type="text" id="hdDestinoId" name="hdDestinoId" value="@Model.DestinoID" />
        <input class="hide" type="text" id="Id" name="Id" value="@Model.Id" />
    </div>

    <section>

        <div class="box">

          <div class="box-body">

            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Nombre" class="control-label"></label>
                </div>

                <div class="col-md-4">
                    <label asp-for="Abreviatura" class="control-label"></label>
                </div>

                <div class="col-md-4">
                    <label asp-for="Destino" class="control-label"></label>
                </div>

            </div>

            <div class="row">

                <div class="col-md-4">

                    <input asp-for="Nombre" type="text" class="form-control" placeholder="Nombre zona" readonly="readonly" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>

                </div>

                <div class="col-md-4">

                    <input asp-for="Abreviatura" type="text" class="form-control" placeholder="Abreviatura" readonly="readonly" />
                    <span asp-validation-for="Abreviatura" class="text-danger"></span>

                </div>

                <div class="col-md-4">

                    @Html.DropDownListFor(model => model.DestinoID, new SelectList(string.Empty, "Value", "Text"), "Seleccione...", new { @class = "form-control", disabled = "disabled", id = "Destino" })
                    @Html.ValidationMessageFor(model => model.DestinoID, "", new { @class = "text-danger" })

                </div>

            </div>

        </div>
        
        </div>

    </section>

    <div class="modal-footer box">

        <button id="btnDel type="submit" class="btn btn-toolbar">
            <span class="glyphicon glyphicon-trash"></span> Eliminar
        </button>

        <a id="BtnClose" class="btn btn-danger" data-dismiss="modal" asp-controller="Zona" asp-action="Index">
            <span class="glyphicon glyphicon-off"></span> Cerrar
        </a>
    </div>

</form>

@section scripts {
    <script src="~/js/select2.min.js"></script>
    <link href="~/css/select2.min.css" rel="stylesheet" />
    <script src="~/js/ZonaScript.js"></script>
}

