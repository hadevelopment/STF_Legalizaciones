@model IEnumerable<Legalizaciones.Model.Jerarquia.Zona>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="box">
            <div class="box-body">
                <small>
                    <a href='@Url.Action("Index","Home")'> Inicio </a>
                    > <strong>Zonas</strong>
                </small>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="box">

            <div class="box-header with-border">
                <span class="fa fa-info-circle"></span>
                <h1 class="box-title">Mis  Zonas </h1>

                 <a class="btn btn-primary" asp-area="" style="float:right;" asp-controller="Zona" asp-action="Crear">Añadir Zona</a>
               
            </div>


            <div class="box-body">
                <table id="tblZonas" class="table table-bordered table-hover myDataTable">
                    <thead>
                        <tr>
                            <th> Id </th>
                            <th> Nombre </th>
                            <th> Abreviatura</th>
                            <th> Destino </th>
                            <th> Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            @foreach (var item in Model)

                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.Abreviatura)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Destino.Nombre)
                                    </td>
                                  
                                    <td>
                                        <a class="item-btn" asp-controller="Zona" asp-action="Visualizar" asp-route-id="@item.Id">
                                            <span class="fa fa-eye"></span>
                                        </a>

                                        <a class="item-btn" asp-controller="Zona" asp-action="Editar" asp-route-id="@item.Id">
                                            <span class="fa fa-pencil"></span>
                                        </a>
                                    </td>
                                </tr>
                            }

                        }
                        else
                        {
                            <tr>
                                <td colspan="8">
                                    No se encontraron resultados...
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <br />
                <div class="row">
                    <div style="float: left;" class="col-md-2">
                        <a class="btn btn-primary fa-file-excel-o" asp-area="" style="float:left;" asp-controller="ExportFilesFormat" asp-action="ExportDatosZonasExcel">Exportar Excel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
