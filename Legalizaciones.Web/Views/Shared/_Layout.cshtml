                </ul>
            </div>

            <!-- Navbar Right Menu -->
            <div class="menu-site-right">
                <ul class="nav navbar-nav">
                    <!-- User Account Menu -->
                    <li class="dropdown user user-menu" style="right:10px;">
                        <!-- Menu Toggle Button -->
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <!-- The user image in the navbar-->
                            <i class="fa fa-user-circle"></i>
                            <!-- hidden-xs hides the username on small devices so only the image appears. -->
                            <span class="hidden-xs">@HttpContextAccessor.HttpContext.Session.GetString("Usuario_Nombre")</span><br />
                            <span class="hidden-xs">@HttpContextAccessor.HttpContext.Session.GetString("Usuario_Area")</span>
                        </a>
                        @*<ul class="dropdown-menu">
                            <!-- The user image in the menu -->
                            <li class="user-header">
                                <img src="~/lib/legalizaciones/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                                <p>
                                    
                                    Admin Innova4j - Master
                                    <small>Member since Mar. 2019</small>
                                </p>
                            </li>
                            <!-- Menu Body -->
                            <li class="user-body">
                                <div class="row">
                                    <div class="col-xs-4 text-center">
                                        <a href="#">Followers</a>
                                    </div>
                                    <div class="col-xs-4 text-center">
                                        <a href="#">Sales</a>
                                    </div>
                                    <div class="col-xs-4 text-center">
