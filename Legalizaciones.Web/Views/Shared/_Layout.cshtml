    <!--<link rel="stylesheet" href="~/css/site.css" />-->
    <link rel="stylesheet" href="~/css/Banner.css" />
    <link rel="stylesheet" href="~/lib/legalizaciones/dist/css/AdminLTE.css" />
    <link rel="stylesheet" href="~/lib/legalizaciones/lib/Ionicons/css/ionicons.css" />
    <link rel="stylesheet" href="~/lib/legalizaciones/lib/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/lib/legalizaciones/lib/select2/dist/css/select2.css">
    <link rel="stylesheet" href="~/lib/legalizaciones/lib/datatables.net-bs/css/dataTables.bootstrap.css">
    <link href="~/lib/legalizaciones/lib/datatables.net/css/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/lib/jquery-ui/base/jquery.ui.autocomplete.css" rel="stylesheet" />
    <link href="~/css/toastr.min.css" rel="stylesheet" />
    @*Customize CSS*@
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="hold-transition skin-blue sidebar-mini">
