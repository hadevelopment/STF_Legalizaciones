@model List<Legalizaciones.Model.InfoLegalizacion>
@{
    ViewData["Title"] = "Legalizaciones"; }

<style type="text/css">
    #divMain {
        width: 120%
    }

    body {
        overflow-x: scroll
    }
</style>

<div class="row">
    <div class="col-sm-12">
        <div class="box">
            <div class="box-body">
                <small>
                    <a href='@Url.Action("Index","Home")'> Inicio </a>
                    > <strong> Legalizaciones </strong>
                </small>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-xs-12">
        <div class="box">

            <div class="box-header with-border">
                <span class="fa fa-info-circle"></span>
                <h1 class="box-title"> Legalizaciones </h1>
            </div>

            <br />

            <div class="row">
                <form asp-controller="Legalizaciones" asp-action="Filtrar" method="Post">
                    <div style="float: left; margin-left: 20px" class="col-md-3">
                        <strong>Consultar por historico de fechas:</strong>
                    </div>
                    <div style="float: left;" class="col-md-2">
                        <input id="fechaDesde" name="fechaDesde" class="form- control datepicker" required="required" autocomplete="off" placeholder="Fecha Desde" />
                    </div>
                    <div style="float: left;" class="col-md-2">
                        <input id="fechaHasta" name="fechaHasta" class="form- control datepicker" required="required" autocomplete="off" placeholder="Fecha Hasta" />
                    </div>
                    <div style="float: left;" class="col-md-1">
                        <button type="submit" class="btn btn-primary">
                            <span class="fa fa-search"></span>
                        </button>
                    </div>
                </form>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a class="btn btn-primary" asp-area="" style="float: right;" asp-controller="Legalizaciones" asp-action="Crear" asp-route-id="0">Legalizar gastos sin anticipo</a>
                    @*@if (ViewBag.rol != "Contabilidad")
            {
                //chequea que el cargo no sea Contabilidad para habilitar Añadir solicitud

                <a class="btn btn-primary" asp-area="" style="float: right;" asp-controller="Solicitud" asp-action="Crear">Añadir Solicitud</a>
            }*@
                </div>

                <div class="col-md-12">
                    <div class="box-body">
                        <table id="tblLegalizaciones" class="table table-bordered table-hover myDataTable" width="100%">
                            <thead>
                                <tr>
                                    <th class="display-none">Id </th>
                                    <th>Concepto</th>
                                    <th>Cédula</th>
                                    <th>Beneficiario</th>
                                    <th>Estado Anticipo</th>
                                    <th>Estado Legalización</th>
                                    <th>Monto</th>
                                    @*<th>Tasa</th>*@
                                    <th class="hidden"> Nro. Anticipo UNOEE</th>
                                    <th class="hidden" title="Nro. Legalización UNOEE">Nro. Lega UNOEE</th>
                                    <th> Fecha Entrega </th>
                                    <th>Dias Entregado</th>
                                    <th>Fecha de Vencimiento</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    int ix = 0;

                                    @foreach (var item in Model)
                                    {
                                        var wFechaseparada = item.FechaVencimiento.ToShortDateString();

                                        var wvenc = false;

                                        <tr style="background-color:@((item.Id > 0 && item.FechaVencimiento < DateTime.Now) ? "#f5dbbe" : "transparent")">
                                            <td class="display-none">
                                                @Html.DisplayFor(modelItem => item.Id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Concepto)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EmpleadoCedula)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Beneficiario)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Estado)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EstadoLegalizacion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Monto)   @Html.DisplayFor(modelItem => item.Moneda)
                                            </td>
                                            <td class="hidden">
                                                @Html.DisplayFor(modelItem => item.IdDocErp)
                                            </td>
                                            <td class="hidden">
                                                @Html.DisplayFor(modelItem => item.ConsecutivoErp)
                                            </td>
                                            <td>
                                                @if (item.Id > 0)
                                                {
                                                    @Html.DisplayFor(modelItem => item.FechaEntrega)

                                                }
                                                else
                                                {
                                                    <span>N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DiasTrascurridos)
                                            </td>
                                            <td>
                                                @if (item.Id > 0)
                                                {
                                                    @Html.DisplayFor(modelItem => item.FechaVencimiento)

                                                }
                                                else {
                                                    <span>N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Id > 0 && item.Estado == "Aprobada")//Sin Legalizar
                                                {
                                                    <a class="item-btn" asp-controller="Solicitud" asp-action="Visualizar" asp-route-Id="@item.Id">
                                                        <span class="fa fa-eye"></span>
                                                    </a>
                                                    <a class="btn btn-primary" asp-area="" asp-controller="Legalizaciones" asp-action="Crear" asp-route-id="@item.Id" method="get">Legalizar</a>
                                                }
                                                else if (item.Id > 0 && (item.Estado == "En Proceso" || item.Estado == "Legalizada" || item.Estado == "En Proceso de Legalización") && item.EstadoLegalizacion != "Rechazada")//Legalizadaa
                                                {
                                                    <a class="item-btn" asp-controller="Legalizaciones" asp-action="Visualizar" asp-route-Id="@item.legalizacionID">
                                                        <span class="fa fa-eye"></span>
                                                    </a>
                                                }
                                                else if (item.Id > 0 && item.EstadoLegalizacion == "Rechazada")
                                                {
                                                    <a class="item-btn" asp-controller="Legalizaciones" asp-action="Visualizar" asp-route-Id="@item.legalizacionID">
                                                        <span class="fa fa-eye"></span>
                                                    </a>
                                                    <a class="item-btn" asp-controller="Legalizaciones" asp-action="Editar" asp-route-legaId="@item.legalizacionID" asp-route-id="@item.Id">
                                                        <span class="fa fa-pencil"></span>
                                                    </a>
                                                }
                                                else if (item.Id == 0 && item.EstadoLegalizacion == "Creada" || item.Id == 0 && item.EstadoLegalizacion == "Rechazada")
                                                {
                                                    <a class="item-btn" asp-controller="Legalizaciones" asp-action="Visualizar" asp-route-Id="@item.legalizacionID">
                                                        <span class="fa fa-eye"></span>
                                                    </a>
                                                    <a class="item-btn" asp-controller="Legalizaciones" asp-action="Editar" asp-route-legaId="@item.legalizacionID" asp-route-id="@item.Id">
                                                        <span class="fa fa-pencil"></span>
                                                    </a>
                                                }
                                                else if (item.Id == 0 && item.EstadoLegalizacion == "En Proceso")
                                                {
                                                    <a class="item-btn" asp-controller="Legalizaciones" asp-action="Visualizar" asp-route-Id="@item.legalizacionID">
                                                        <span class="fa fa-eye"></span>
                                                    </a>
                                                }
                                            </td>
                                        </tr>}
                                }
                                else
                                {
                                    <tr class="tableEmpty">
                                        <td colspan="8">
                                            No posee anticipos pendientes por Legalizar...
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                        <br />
                        <div class="row">
                            <div style="float: left;" class="col-md-2">
                                <a class="btn btn-primary" asp-area="" style="float:left;" asp-controller="ExportFilesFormat" asp-action="ExportDatosLegalizacionesExcel"><i class="fa fa-file-excel-o"></i>Exportar</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bs-example-modal-sm" id="pdfModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fa fa-list-alt"></i>Carta - Vista Previa</h3>
                <div class="box-tools pull-right">
                </div>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-12">
                            <iframe id="iframePDF" src="" width="100%" height="600px"></iframe>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a id="BtnClose" class="btn btn-danger" data-dismiss="modal">
                    <span class="glyphicon glyphicon-off"></span> Cerrar
                </a>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/js/select2.min.js"></script>
    <link href="~/css/select2.min.css" rel="stylesheet" />
    <script src="~/lib/legalizaciones/lib/datatables.net/js/jquery.dataTables.js"></script>
}



