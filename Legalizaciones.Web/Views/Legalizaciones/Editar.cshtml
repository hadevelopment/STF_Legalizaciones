                                    <td class="display-none">CiudadId</td>
                                    <td class="display-none">TipoServicioId</td>
                                    <td class="display-none">ProveedorId</td>
                                    <td class="display-none">Concepto</td>
                                    <td class="display-none">CentroOperacionId</td>
                                    <td class="display-none">UnidadNegocioId</td>
                                    <td class="display-none">CentroCostoId</td>
                                    <td>Fecha</td>
                                    <td class="display-none">Centro Operación</td>
                                    <td class="display-none">Unidad Negocio</td>
                                    <td class="display-none">Centro Costo</td>
                                    <td>Fecha Gasto</td>
                                    <td>Pais</td>
                                    <td>Ciudad</td>
                                    <td>Servicio</td>
                                    <td>Proveedor</td>
                                    <td>Concepto Gasto</td>
                                    <td class="maskMoney">Valor</td>
                                    <td>Acciones</td>
                                </tr>
                            </thead>
                            <tbody id="Items">
                                @if (Model.LegalizacionGastos.Count > 0)
                                {
                                    int index = 0;
                                    @foreach (var item in Model.LegalizacionGastos)
                                    {
                                        index++;
                                        // string total = (item.Monto + Convert.ToDecimal(item.IVA)).ToString("N2");
                                <tr>
                                    <td class="display-none">@item.PaisId</td>
                                    <td class="display-none">@item.CiudadId</td>
