                        </table>
                    </div>
                </div>

                <div class="row" style="margin-top: 10px;">
                    <div class=" row" style="margin-right: 0px">
                        <div class="col-md-7"></div>
                        <div class="col-md-5">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <div class="row margin-bottom">
                                        <div class="col-md-7">
                                            <h4>Anticipo Entregado:</h4>
                                        </div>
                                        <div class="col-md-5">
                                            <h4>
                                                @Html.EditorFor(model => model.MontoAnticipoEntregado, new { htmlAttributes = new { @class = "txtLabel maskMoney", @id = "txMontoAnticipo", @readonly = "readonly" } })
                                            </h4>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-7">
                                            <h4>Gastos Reportados:</h4>
                                            <h4>Saldo:</h4>
                                        </div>
                                        <div class="col-md-5 text-right" style="padding-right:22px;">
                                            <h4>
                                                @Html.TextBoxFor(model => model.MontoGastosReportados, new { @class = "txtLabel maskMoney", @id = "txMontoFaltante", @readonly = "readonly", @style = "font-size:18px; padding-top:5px;" })
                                                @*@Html.EditorFor(model => model.MontoGastosReportados, new { htmlAttributes = new { @class = "txtLabel maskMoney", @id = "txMontoFaltante", @readonly = "readonly", @style = "font-size:18px; padding-top:5px;" } })*@
