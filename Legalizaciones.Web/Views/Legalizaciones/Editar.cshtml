                                    <td class="display-none">@item.ProveedorId</td>
                                    <td class="display-none">@item.Concepto</td>
                                    <td class="display-none">@item.CentroOperacionId</td>
                                    <td class="display-none">@item.UnidadNegocioId</td>
                                    <td class="display-none">@item.CentroCostoId</td>
                                    <td>@String.Format("{0:dd/MM/yyy}", item.FechaCreacion)</td>
                                    <td class="display-none">@item.CentroOperacion</td>
                                    <td class="display-none">@item.UnidadNegocio</td>
                                    <td class="display-none">@item.CentroCosto</td>
