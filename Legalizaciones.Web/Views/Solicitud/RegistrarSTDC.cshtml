@model Legalizaciones.Web.Models.ViewModel.SolicitudTDCViewModel
@{
    ViewData["Title"] = "Solicitud Con TDC";
}
<!DOCTYPE html>

<div class="row">
    <div class="col-sm-12">
        <div class="box">
            <div class="box-body">
                <small>
                    <a href='@Url.Action("Index","Home")'> Registrar solicitud de anticipo con tarjeta de Crédito  </a>
                    >
                    <strong>Nueva</strong>
                </small>
            </div>
        </div>
    </div>
</div>


<form asp-controller="Solicitud" asp-action="RegistrarSTDC" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <section class="">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="glyphicon glyphicon-credit-card"></i><strong> Registrar solicitud de anticipo con tarjeta de Crédito</strong></h3>
            </div>

            <div class="box-body">
                <div class="row margin-bottom"></div>

                <div class="row margin-bottom">
                    <div class="col-md-12">
                        <label asp-for="Cedula" id="lbl_Cedula">Cédula del beneficiario</label>
                    </div>
                    <div class="col-md-12">
                        @*@Html.TextBoxFor(model => model.Cedula, new {@class = "col-md-12 lbl100", @placeholder = "Ingrese",})*@
                        <input asp-for="Cedula" class="form-control" type="number" maxlength="10" />
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>

                </div>



                <div class="row margin-bottom">
                    <div class="col-md-12">
                        <label asp-for="Extracto" id="lbl_Extracto">Extracto de la tarjeta de crédito</label>
                    </div>
                    <div class="col-md-12">
                        @*@Html.TextBoxFor(model => model.Extracto, new {@class = "col-md-12 lbl100", @placeholder = "Ingrese"})*@
                        <input asp-for="Extracto" class="form-control" type="number" />
                        <span asp-validation-for="Extracto" class="text-danger"></span>
                    </div>
                </div>

                <div class="row margin-bottom">
                    <div class="col-md-12">
                        <label asp-for="Banco">Banco</label>
                    </div>
                    <div class="col-md-12">
                        @*@Html.TextBoxFor(model => model.Banco, new {@class = "col-md-12 lbl100", @placeholder = "Ingrese"})*@
                        <input asp-for="Banco" class="form-control" />
                        <span asp-validation-for="Banco" class="text-danger"></span>
                    </div>

                </div>

                <div class="row margin-bottom">
                    <div class="col-md-12">
                        <label asp-for="Monto">Monto</label>
                    </div>
                    <div class="col-md-12">
                        @*@Html.TextBoxFor(model => model.Monto, new {@class = "col-md-12 lbl100", @placeholder = "Ingrese"})*@
                        <input asp-for="Monto" class="form-control" type="number" />
                        <span asp-validation-for="Monto" class="text-danger"></span>
                    </div>

                </div>

                <div class="row margin-bottom"></div>

                <div class="box-tools pull-right">
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-floppy-save"></span> Registrar
                    </button>
                </div>


            </div>

        </div>


    </section>

</form>

